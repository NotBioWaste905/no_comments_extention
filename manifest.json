{
  "name": "No Comment VK",
  "description": "Hides all comment unders posts to defend you from stupid peoples' opinions",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {},
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "activeTab", "system.display"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "background": {}
}
